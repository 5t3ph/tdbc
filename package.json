{
  "name": "thinkdobecreate",
  "description": "Web home of Stephanie Eckles - 5t3ph",
  "version": "0.1.0",
  "main": "public/index.html",
  "author": "5t3ph",
  "scripts": {
    "scss": "node-sass src/sass/style.scss src/css/style.css",
    "css": "postcss src/css/style.css -u autoprefixer cssnano -r",
    "copy:css": "copyfiles -u 1 ./src/css/* public",
    "copy:html": "copyfiles -u 1 ./src/*.html public",
    "copy": "npm run copy:css && npm run copy:html",
    "watch:html": "onchange 'src/*.html' -- npm run copy:html",
    "watch:sass": "node-sass --watch src/sass src/sass/*/ -o public/css",
    "watch": "npm run watch:html | npm run watch:sass",
    "serve": "browser-sync start --server public --files public",
    "develop": "npm run copy && npm run watch | npm run serve",
    "build": "npm run copy:html && npm run scss && npm run css && npm run copy:css"
  },
  "dependencies": {
    "autoprefixer": "^9.5.0",
    "browser-sync": "^2.26.3",
    "copyfiles": "^2.1.0",
    "cssnano": "^4.1.10",
    "node-sass": "^4.11.0",
    "onchange": "^5.2.0",
    "postcss-cli": "^6.1.2"
  },
  "browserslist": [
    "last 2 versions"
  ]
}

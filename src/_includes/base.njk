{%- set titleValue -%}
{%- if title %}{{ title }} | {% endif %}{{ meta.siteName }}{% if not title %} | Frontend Developer, Author, Speaker{% endif -%}
{%- endset -%}
{%- set ogImg %}{% if title %}{{ title | slug }}{% else %}home{% endif %}{% endset %}
{%- set pgDesc %}{% if description %}{{ description }}{% else %}{{ meta.siteDescription }}{% endif %}{% endset %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Generated from the 11ty Netlify Jumpstart: https://github.com/5t3ph/11ty-netlify-jumpstart -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ titleValue }}</title>
    <meta
      name="description"
      content="{{ pgDesc }}"
    />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üë©‚Äçüíª</text></svg>"
    />
    <link href="{{ '/css/style.css' | url }}" rel="stylesheet" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@{{ meta.twitterUsername }}" />
    <meta
      name="twitter:title"
      content="{{ titleValue }}"
    />
    <meta
      name="twitter:description"
      content="{{ pgDesc }}"
    />

    <meta
      name="og:title"
      content="{{ titleValue }}"
    />
    <meta
      name="og:description"
      content="{{ pgDesc }}"
    />
    
    <meta property="og:image" content="{{ meta.url }}/previews/{{ ogImg }}.png" />
    <meta name="twitter:image" content="{{ meta.url }}/previews/{{ ogImg }}.png" />
  </head>
  <body>
    <a href="#main" class="tdbc-skip-link">Skip to main content</a>
    {{ content | safe }}

    <footer class="tdbc-background--primary-dark tdbc-gradient--before">
      <div class="tdbc-container">
        <div class="tdbc-row tdbc-row--center tdbc-ink--light">
          <p>&copy; {% year %} Stephanie Eckles</p>
          {% include "links.njk" %}
          <p>Support my projects - <a href="https://www.buymeacoffee.com/moderncss">buy me a coffee</a></p>
        </div>
      </div>
    </footer>

    {%- if page.url === '/contact/' -%}
    {% set js %}{% include "form.js" %}{% endset %}
    <script>
      {{ js | jsmin | safe }}
    </script>
    {%- endif -%}
  </body>
</html>
